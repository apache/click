<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<click-app charset="UTF-8">

  <pages package="net.sf.click.examples.page">
    <page path="exception.htm" classname="ExceptionDemo"/>
    <excludes pattern="/tiny_mce/"/>
  </pages>

  <mode value="profile"/>

  <controls>
    <control classname="net.sf.click.examples.control.FilterPanel"/>
  </controls>
    
  <file-upload-service classname="net.sf.click.service.CommonsFileUploadService">
  	<property name="sizeMax" value="1024"/>
  	<property name="fileSizeMax" value="1024"/>
  </file-upload-service>

  <template-service classname="net.sf.click.service.VelocityTemplateService"/>

</click-app>
